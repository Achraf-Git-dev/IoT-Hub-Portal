@page "/gateways/ConnectionString"

@using Microsoft.AspNetCore.Authorization

@inject HttpClient Http

<div class="ConnectionString-dialog">
    <MudDialog>
        <DialogContent>
            <MudCard Outlined="true" Style="width:min-content">
                <MudCardContent Style="" Class="connectionString-modal-card">
                    <div class="form-group">
                        <label>Scope : </label>
                        <MudText>@Scope</MudText>
                    </div>
                    <div class="form-group">
                        <label>Symmetric Key : </label>
                        <MudText>@SymmetricKey</MudText>
                    </div>
                    <div class="form-group">
                        <label>Service Endpoint : </label>
                        <MudText>@Endpoint</MudText>
                    </div>
                </MudCardContent>
            </MudCard>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="Cancel">Cancel</MudButton>
        </DialogActions>
    </MudDialog>
</div>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string Endpoint { get; set; }
    [Parameter] public string Scope { get; set; }
    [Parameter] public string SymmetricKey { get; set; }

    void Cancel() => MudDialog.Cancel();
}
