@using AzureIoTHub.Portal.Shared.Models
@inject HttpClient Http
@inject IJSRuntime JS
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h5">Environment Variables</MudText>
        @foreach (var test in Module.EnvironmentVariables)
        {
            <MudItem xs="12" Class="custom-form">
                <MudItem md="3" sm="12">
                    <MudText>@test.Key</MudText>
                </MudItem>
                <MudItem md="9" sm="12">
                    <MudText Class="custom-disabled">@test.Value</MudText>
                </MudItem>
            </MudItem>
        }

        <MudText Typo="Typo.h5">Module Identity Twin Settings</MudText>
        @foreach (var test in Module.ModuleIdentityTwinSettings)
        {
            <MudItem xs="12" Class="custom-form">
                <MudItem md="3" sm="12">
                    <MudText>@test.Key</MudText>
                </MudItem>
                <MudItem md="9" sm="12">
                    <MudText Class="custom-disabled">@test.Value</MudText>
                </MudItem>
            </MudItem>
        }

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }
    [Parameter]
    public GatewayModule Module { get; set; }

    void Cancel() => MudDialog.Cancel();
}
